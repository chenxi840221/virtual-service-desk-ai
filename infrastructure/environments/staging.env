# Staging Environment Configuration
# DXC Virtual Service Desk AI - Staging Environment

# Environment Metadata
ENVIRONMENT=staging
DEPLOYMENT_STAGE=staging
AZURE_REGION=australiaeast
PROJECT_NAME=dxc-servicedesk-ai

# Resource Naming Convention
RESOURCE_GROUP_NAME=dxc-servicedesk-ai-staging-rg
STORAGE_ACCOUNT_NAME=dxcservicedeskaistagingsa
KEY_VAULT_NAME=dxc-servicedesk-ai-staging-kv
AI_FOUNDRY_NAME=dxc-servicedesk-ai-staging-ai
DATABRICKS_NAME=dxc-servicedesk-ai-staging-databricks
WEB_APP_NAME=dxc-servicedesk-ai-staging-webapp
APP_SERVICE_PLAN_NAME=dxc-servicedesk-ai-staging-asp
LOG_ANALYTICS_NAME=dxc-servicedesk-ai-staging-logs
APP_INSIGHTS_NAME=dxc-servicedesk-ai-staging-insights

# Databricks Configuration
DATABRICKS_CATALOG_NAME=dxc_servicedesk_staging
DATABRICKS_SCHEMA_NAME=models
DATABRICKS_CLUSTER_NODE_TYPE=Standard_DS4_v2
DATABRICKS_CLUSTER_WORKERS=3
DATABRICKS_CLUSTER_AUTOTERMINATE=60

# AI Model Configuration
AI_MODEL_TEXT_ANALYSIS=gpt-4o-mini-staging
AI_MODEL_TEXT_GENERATION=gpt-4o-staging
AI_MODEL_EMBEDDINGS=embeddings-staging
AI_MAX_TOKENS_ANALYSIS=1500
AI_MAX_TOKENS_GENERATION=2500
AI_TEMPERATURE_ANALYSIS=0.1
AI_TEMPERATURE_GENERATION=0.7

# Application Configuration
ASPNETCORE_ENVIRONMENT=Staging
LOG_LEVEL=Information
ENABLE_SWAGGER=true
ENABLE_DETAILED_ERRORS=false

# Performance Configuration
RATE_LIMIT_REQUESTS_PER_MINUTE=150
RATE_LIMIT_TOKENS_PER_MINUTE=75000
CACHE_EXPIRATION_MINUTES=15
CONNECTION_TIMEOUT_SECONDS=45

# Security Configuration
ENABLE_HTTPS_REDIRECT=true
ENABLE_CORS=false
CORS_ALLOWED_ORIGINS=https://dxc-servicedesk-ai-staging-webapp.azurewebsites.net
JWT_TOKEN_EXPIRY_HOURS=4
REQUIRE_HTTPS=true

# Database Configuration
SQL_CONNECTION_TIMEOUT=90
SQL_COMMAND_TIMEOUT=180
ENABLE_SENSITIVE_DATA_LOGGING=false

# Monitoring Configuration
ENABLE_APPLICATION_INSIGHTS=true
ENABLE_PERFORMANCE_COUNTERS=true
SAMPLING_PERCENTAGE=75
TELEMETRY_FLUSH_INTERVAL=15

# Feature Flags
ENABLE_AI_ANALYSIS=true
ENABLE_SENTIMENT_ANALYSIS=true
ENABLE_MULTILINGUAL_SUPPORT=true
ENABLE_RAG_SEARCH=true
ENABLE_ESCALATION_PREDICTION=true
ENABLE_BATCH_PROCESSING=true

# Staging-specific settings
ENABLE_HOT_RELOAD=false
ENABLE_BROWSER_LINK=false
ENABLE_RUNTIME_COMPILATION=false
ENABLE_DEBUG_TOOLBAR=false

# Data Configuration
MAX_UPLOAD_SIZE_MB=50
MAX_BATCH_SIZE=500
DATA_RETENTION_DAYS=90
ENABLE_DATA_SEEDING=false

# Notification Configuration
EMAIL_NOTIFICATIONS_ENABLED=true
SLACK_NOTIFICATIONS_ENABLED=true
TEAMS_NOTIFICATIONS_ENABLED=false

# External Service Configuration
AZURE_TENANT_ID=${AZURE_TENANT_ID}
AZURE_CLIENT_ID=${AZURE_CLIENT_ID}
AZURE_CLIENT_SECRET=${AZURE_CLIENT_SECRET}

# Staging-specific settings
MOCK_EXTERNAL_SERVICES=false
GENERATE_SYNTHETIC_DATA=true
ENABLE_TEST_ENDPOINTS=false
BYPASS_AUTHENTICATION=false

# Load Testing Configuration
ENABLE_LOAD_TESTING=true
MAX_CONCURRENT_USERS=100
LOAD_TEST_DURATION_MINUTES=30

# Backup Configuration
ENABLE_AUTOMATED_BACKUPS=true
BACKUP_RETENTION_DAYS=7
BACKUP_FREQUENCY_HOURS=6