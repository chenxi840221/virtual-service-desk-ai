# Development Environment Configuration
# DXC Virtual Service Desk AI - Development Environment

# Environment Metadata
ENVIRONMENT=dev
DEPLOYMENT_STAGE=development
AZURE_REGION=australiaeast
PROJECT_NAME=dxc-servicedesk-ai

# Resource Naming Convention
RESOURCE_GROUP_NAME=dxc-servicedesk-ai-dev-rg
STORAGE_ACCOUNT_NAME=dxcservicedeskaidevsa
KEY_VAULT_NAME=dxc-servicedesk-ai-dev-kv
AI_FOUNDRY_NAME=dxc-servicedesk-ai-dev-ai
DATABRICKS_NAME=dxc-servicedesk-ai-dev-databricks
WEB_APP_NAME=dxc-servicedesk-ai-dev-webapp
APP_SERVICE_PLAN_NAME=dxc-servicedesk-ai-dev-asp
LOG_ANALYTICS_NAME=dxc-servicedesk-ai-dev-logs
APP_INSIGHTS_NAME=dxc-servicedesk-ai-dev-insights

# Databricks Configuration
DATABRICKS_CATALOG_NAME=dxc_servicedesk_dev
DATABRICKS_SCHEMA_NAME=models
DATABRICKS_CLUSTER_NODE_TYPE=Standard_DS3_v2
DATABRICKS_CLUSTER_WORKERS=2
DATABRICKS_CLUSTER_AUTOTERMINATE=30

# AI Model Configuration
AI_MODEL_TEXT_ANALYSIS=gpt-4o-mini-dev
AI_MODEL_TEXT_GENERATION=gpt-4o-dev
AI_MODEL_EMBEDDINGS=embeddings-dev
AI_MAX_TOKENS_ANALYSIS=1000
AI_MAX_TOKENS_GENERATION=2000
AI_TEMPERATURE_ANALYSIS=0.1
AI_TEMPERATURE_GENERATION=0.7

# Application Configuration
ASPNETCORE_ENVIRONMENT=Development
LOG_LEVEL=Debug
ENABLE_SWAGGER=true
ENABLE_DETAILED_ERRORS=true

# Performance Configuration
RATE_LIMIT_REQUESTS_PER_MINUTE=200
RATE_LIMIT_TOKENS_PER_MINUTE=100000
CACHE_EXPIRATION_MINUTES=5
CONNECTION_TIMEOUT_SECONDS=30

# Security Configuration
ENABLE_HTTPS_REDIRECT=false
ENABLE_CORS=true
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000,https://localhost:5001
JWT_TOKEN_EXPIRY_HOURS=8
REQUIRE_HTTPS=false

# Database Configuration
SQL_CONNECTION_TIMEOUT=60
SQL_COMMAND_TIMEOUT=120
ENABLE_SENSITIVE_DATA_LOGGING=true

# Monitoring Configuration
ENABLE_APPLICATION_INSIGHTS=true
ENABLE_PERFORMANCE_COUNTERS=true
SAMPLING_PERCENTAGE=50
TELEMETRY_FLUSH_INTERVAL=30

# Feature Flags
ENABLE_AI_ANALYSIS=true
ENABLE_SENTIMENT_ANALYSIS=true
ENABLE_MULTILINGUAL_SUPPORT=true
ENABLE_RAG_SEARCH=true
ENABLE_ESCALATION_PREDICTION=true
ENABLE_BATCH_PROCESSING=false

# Development Tools
ENABLE_HOT_RELOAD=true
ENABLE_BROWSER_LINK=true
ENABLE_RUNTIME_COMPILATION=true
ENABLE_DEBUG_TOOLBAR=true

# Data Configuration
MAX_UPLOAD_SIZE_MB=10
MAX_BATCH_SIZE=100
DATA_RETENTION_DAYS=30
ENABLE_DATA_SEEDING=true

# Notification Configuration
EMAIL_NOTIFICATIONS_ENABLED=false
SLACK_NOTIFICATIONS_ENABLED=false
TEAMS_NOTIFICATIONS_ENABLED=false

# External Service Configuration
AZURE_TENANT_ID=${AZURE_TENANT_ID}
AZURE_CLIENT_ID=${AZURE_CLIENT_ID}
AZURE_CLIENT_SECRET=${AZURE_CLIENT_SECRET}

# Development-specific settings
MOCK_EXTERNAL_SERVICES=true
GENERATE_SYNTHETIC_DATA=true
ENABLE_TEST_ENDPOINTS=true
BYPASS_AUTHENTICATION=false